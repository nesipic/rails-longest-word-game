
<h1>Games#new</h1>
<p style="color:white;font-size:46px;padding:10px;background-color:blue;text-align:center;"><%= @letters %></p>
<form action="/score" method="post">
  <input type="text" maxlength="10" placeholder="Lets play a game" name="word">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
